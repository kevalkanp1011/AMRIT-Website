---
import readingTime from "@/lib/utils/readingTime";
import Button from "./shortcodes/Button"

import { humanize } from "@/lib/utils/textConverter";
import {
  FaRegClock,
  FaRegFolder,
} from "react-icons/fa";
import { Image } from "astro:assets";

const { post } = Astro.props;
const { Content } = await post.render();
---

<section class="section blog-single">
  <div class="container">
    <div class="row justify-center">
      <div class="lg:col-10">
        <Image
          class="w-full rounded-xl"
          src={post.data.image}
          alt=""
          width={920}
          height={450}
        />
      </div>
      <div class="mt-10 max-w-[810px] lg:col-9">
        <h1 class="h2">
          {post.data.title}
        </h1>
        <div class="mb-5 mt-6 flex items-center space-x-2">
          <ul class="mb-4">
            <li class="mr-4 inline-block">
              <FaRegClock className={"mr-2 -mt-1 inline-block"} />
              {readingTime(post.body)}
            </li>
            <li class="mr-4 inline-block">
              <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
              {humanize(post.data.categories[0])}
            </li>
          </ul>
        </div>

        <div class="content">
          <Content />
        </div>
        <Button href={post.data.link} style={'primary'} children={'Learn more'} rel={'noopener noreferrer'} client:load/>
      </div>
    </div>
  </div>
</section>
